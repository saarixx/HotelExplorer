<Window x:Class="HotelExplorerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelExplorerGUI"
        mc:Ignorable="d"
        Title="Hotel explorer" Height="350" Width="525">
    <Grid>
        <Label Content="Hotel name:" HorizontalAlignment="Left" Margin="6,9,0,0" VerticalAlignment="Top" Padding="0"/>
        <TextBox x:Name="HotelNameTextBox" Height="23" Margin="75,6,109,0" Text="Rixos Tekirova" VerticalAlignment="Top"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Right" Margin="0,6,6,0" VerticalAlignment="Top" Width="98" Click="SearchButton_Click"/>
        <TextBox x:Name="LogTextBox" Margin="6,34,6,6" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
